import sys, os, traceback
import cPickle as pickle

from hotdoc.core.doc_tool import DocTool
from hotdoc.extensions import *

if __name__=="__main__":
    extension_dirs = os.getenv ("HOTDOC_EXTENSION_PATH")
    if extension_dirs:
        for dir_ in extension_dirs.split(':'):
            for f in os.listdir (dir_):
                if f.endswith (".py"):
                    __import__ ("%s.%s" % (dir_, f[:-3]))

    doc_tool = DocTool()

    try:
        doc_tool.setup(sys.argv[1:])
        doc_tool.format()
        doc_tool.persist()
        doc_tool.finalize()
        pickle.dump(sys.argv[1:], open('args.p', 'wb'))
    except Exception as e:
        if os.environ.get ("DOC_DEBUG"):
            traceback.print_exc (e)
        else:
            print '\033[91m' + e.message + '\033[0m'
        sys.exit (1)
    sys.exit(0)
